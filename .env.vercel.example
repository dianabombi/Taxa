# Vercel Environment Variables
# Copy these to your Vercel project settings

# Backend API URL (update with your backend deployment URL)
NEXT_PUBLIC_API_BASE_URL=https://your-backend.railway.app

# OpenAI API Key (for AI chat feature)
OPENAI_API_KEY=your_openai_api_key_here

# Database (if using serverless)
DATABASE_URL=your_database_connection_string

# MinIO / S3 Configuration
MINIO_ENDPOINT=your_minio_endpoint
MINIO_ACCESS_KEY=your_access_key
MINIO_SECRET_KEY=your_secret_key
MINIO_BUCKET_NAME=taxa-documents

# Other API Keys
MINDEE_API_KEY=your_mindee_api_key
VERYFI_CLIENT_ID=your_veryfi_client_id
VERYFI_API_KEY=your_veryfi_api_key
KLIPPA_API_KEY=your_klippa_api_key

# Secret Key for JWT
SECRET_KEY=your_secret_key_here
