# TAXA Security Configuration Template
# Copy this file to .env and fill in your secure values

# ============================================
# CRITICAL: Generate secure values for production
# ============================================

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/taxa_db
# For production, use encrypted connection:
# DATABASE_URL=postgresql://user:password@host:5432/taxa_db?sslmode=require

# Security Keys (NEVER use defaults in production!)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=CHANGE_THIS_TO_SECURE_RANDOM_VALUE_64_CHARS_MINIMUM
ENCRYPTION_KEY=CHANGE_THIS_TO_SECURE_RANDOM_VALUE_64_CHARS_MINIMUM

# JWT Configuration
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# OCR Service Configuration
OCR_PROVIDER=mindee
MINDEE_API_KEY=your_mindee_api_key_here

# Email Configuration (for 2FA, alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@taxa.sk
SMTP_FROM_NAME=TAXA Security

# Security Settings
ENABLE_2FA=true
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# File Upload Security
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=.pdf,.jpg,.jpeg,.png
ENABLE_VIRUS_SCANNING=false
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# CORS Configuration (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
ALLOWED_HOSTS=localhost,yourdomain.com

# Environment
ENVIRONMENT=development
DEBUG=false

# Monitoring & Logging
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_here

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=90

# Session Configuration
SESSION_TIMEOUT_MINUTES=15
MAX_CONCURRENT_SESSIONS=1

# IP Whitelist for Admin (comma-separated, leave empty to disable)
ADMIN_IP_WHITELIST=

# Rate Limiting (requests per minute)
RATE_LIMIT_LOGIN=5
RATE_LIMIT_REGISTER=3
RATE_LIMIT_UPLOAD=10
RATE_LIMIT_CHAT=20
RATE_LIMIT_API=100
